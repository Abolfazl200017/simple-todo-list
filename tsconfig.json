{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,  // Allow importing .ts/.tsx files with extensions
    "noEmit": true  // Enable noEmit
  },
  "include": [
    "src"
  ]
}
